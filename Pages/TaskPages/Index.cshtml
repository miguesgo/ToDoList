@page
@model ToDoList.Pages.TaskPages.IndexModel

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Tasks List</h2>
        </div>
        <div class="col-6 text-end">
            Boton
        </div>
    </div>

    <br /><br />

    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    Task Name
                </th>
                <th>
                    Description
                </th>
                <th>
                    Status
                </th>
                <th>
                    Due date
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach(var obj in Model.ToDoTasks)
            {
                <tr>
                    <td>@obj.Name</td>
                    <td>@obj.Description</td>
                    <td>@(obj.IsCompleted == 1 ? "✔" : "")</td>
                    <td>@obj.DueDate</td>
                </tr>
            }
        </tbody>
    </table>
</div>